<%= render "components_mobile/navbar" %>

<div class="container jusytify-content-center">
  <div class="d-flex justify-content-center align-items-center" style="height: 100px">
    <h2 class="heading-text">Write a post</h2>
  </div>

  <%= simple_form_for([@project, @post], url: project_posts_path, method: :post) do |f| %>
    <div class="form-inputs">

    <%= f.input :content,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input-design" } %>


    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Post", class: "btn-main-dark" %>
    </div>

  <% end %>


