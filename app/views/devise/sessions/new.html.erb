<%=render "components_mobile/header_logo"%>
<div class="container jusytify-content-center">
  <div class="d-flex justify-content-center align-items-center" style="height: 100px">
    <h2 class="heading-text">Log in!</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "input-design" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "input-design" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Log in", class: "btn-main-dark" %>
    </div>

    <div class="d-flex justify-content-center align-items-center m-1" style="height: 100px">
      <h2 class="heading-text">No account?</h2>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-main-dark mt-2 align-items-center", style: "padding-top: 10px;" %>
    </div>
  <% end %>


