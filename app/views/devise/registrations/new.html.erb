<%=render "components_mobile/header_logo"%>
<div class="container jusytify-content-center">
  <div class="d-flex justify-content-center align-items-center" style="height: 100px">
    <h2 class="heading-text">Get Started!</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first name", class: "input-design"}%>

      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last name",  class: "input-design"}%>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "input-design"}%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "input-design" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "input-design" } %>
    </div>
    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Sign up", class: "btn-main-dark"%>
    </div>
  <% end %>

<%= render "devise/shared/links" %>

</div>
